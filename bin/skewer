#!/usr/bin/env node

if(!process.argv[2]) {
  console.log('Please, specify a folder to serve')
  process.exit();
}

var server = require('..')(process.argv[2]);

server.listen(server.get('port'), function(){
  var port = server.get('port');
  console.log(`** node-skewer start at localhost:${port}`);
  console.log(`** Load "localhost:${port}/${server.locals.skewerPath}/skewer.js" in page to enjoy complete features.`);
});
